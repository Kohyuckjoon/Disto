<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartMeasurement">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="측정값"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/mcLayout1"
                app:layout_constraintTop_toTopOf="@+id/mcLayout1"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="@color/white">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/mcLayout2"
                app:layout_constraintTop_toTopOf="@+id/mcLayout2"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="@color/white">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/mcLayout3"
                app:layout_constraintTop_toTopOf="@+id/mcLayout3"
                app:layout_constraintEnd_toEndOf="@+id/clLayout"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>








</androidx.constraintlayout.widget.ConstraintLayout>