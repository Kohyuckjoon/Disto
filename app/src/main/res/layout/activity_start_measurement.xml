<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartMeasurement"
    android:background="@color/white">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="측정값"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector32"
                app:layout_constraintStart_toEndOf="@+id/mcLayout1"
                app:layout_constraintTop_toTopOf="@+id/mcLayout1"
                app:layout_constraintBottom_toBottomOf="@+id/mcLayout1"
                android:layout_marginLeft="7dp">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/line1"
                app:layout_constraintTop_toTopOf="@+id/mcLayout1"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                android:layout_marginLeft="7dp"
                app:cardBackgroundColor="@color/white">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector32"
                app:layout_constraintStart_toEndOf="@+id/mcLayout2"
                app:layout_constraintTop_toTopOf="@+id/mcLayout2"
                app:layout_constraintBottom_toBottomOf="@+id/mcLayout2"
                android:layout_marginLeft="7dp">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/line2"
                app:layout_constraintTop_toTopOf="@+id/mcLayout2"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                android:layout_marginLeft="7dp"
                app:cardBackgroundColor="@color/white">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector32"
                app:layout_constraintStart_toEndOf="@+id/mcLayout3"
                app:layout_constraintTop_toTopOf="@+id/mcLayout2"
                app:layout_constraintBottom_toBottomOf="@+id/mcLayout2"
                android:layout_marginLeft="7dp">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/line3"
                app:layout_constraintTop_toTopOf="@+id/mcLayout3"
                app:layout_constraintEnd_toEndOf="@+id/clLayoutTop"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="35dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mcComplete4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="측 정"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                </com.google.android.material.textview.MaterialTextView>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLayoutTop2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        android:layout_margin="30dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mcTvManholeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맨홀 타입"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </com.google.android.material.textview.MaterialTextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mcTvManholeType"
            app:layout_constraintBottom_toBottomOf="@+id/mcTvManholeType">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mRBtn01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toStartOf="@id/mRBtn02"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical">
            </com.google.android.material.radiobutton.MaterialRadioButton>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mRBtn02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2개"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toStartOf="@+id/mRBtn03"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical">
            </com.google.android.material.radiobutton.MaterialRadioButton>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mRBtn03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toStartOf="@+id/mRBtn04"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical">
            </com.google.android.material.radiobutton.MaterialRadioButton>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mRBtn04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4개"
                android:textStyle="bold"
                android:textSize="20sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical">
            </com.google.android.material.radiobutton.MaterialRadioButton>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mcTvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실시간 거리"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout01"
            app:layout_constraintStart_toStartOf="parent">
        </com.google.android.material.textview.MaterialTextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout01"
            app:layout_constraintBottom_toBottomOf="@+id/mcTvAngleMax"
            app:layout_constraintEnd_toEndOf="@+id/clLayoutTop2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <!--***-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcTvDistanceInput"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:strokeWidth="0dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="#E9ECEF">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_margin="7dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:hint="100">
                </EditText>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcTvAngleInput"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:strokeWidth="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcTvDistanceInput"
                app:cardBackgroundColor="#E9ECEF">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:hint="100">
                </EditText>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcTvDistanceMAXInput"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcTvAngleInput"
                app:strokeWidth="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#E9ECEF">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:hint="100">
                </EditText>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcTvAngleMAXInput"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:strokeWidth="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcTvDistanceMAXInput"
                app:cardBackgroundColor="#E9ECEF">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:hint="100">
                </EditText>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mcTvAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실시간 각도"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mcTvDistance">
        </com.google.android.material.textview.MaterialTextView>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mcTvDistanceMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리 최대값"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mcTvAngle">
        </com.google.android.material.textview.MaterialTextView>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mcTvAngleMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="각도 최대값"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mcTvDistanceMax">
        </com.google.android.material.textview.MaterialTextView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mcTvLoaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 위치"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clLayoutTop2">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mcTvCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 송파구 송파대로 167 B동 6층 B608호(문정동,문정역테라타워)"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="#808080"
        app:layout_constraintStart_toEndOf="@+id/mcTvLoaction"
        app:layout_constraintBottom_toBottomOf="@+id/mcTvLoaction">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcTvCumulativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:strokeWidth="1dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/clLayoutTop2"
        app:layout_constraintTop_toBottomOf="@+id/clLayoutTop2">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mcTvCumulative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="누적 측정값"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp">
        </com.google.android.material.textview.MaterialTextView>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mcTvLoaction"
        app:layout_constraintStart_toStartOf="@+id/mcTvLoaction"
        app:layout_constraintEnd_toEndOf="@+id/clLayoutTop2">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcPickture"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#E9ECEF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp">
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="5dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:hint="Picture"
            app:layout_constraintStart_toStartOf="@+id/mcPickture"
            app:layout_constraintEnd_toEndOf="@+id/mcPickture"
            app:layout_constraintTop_toTopOf="@+id/mcPickture"
            app:layout_constraintBottom_toBottomOf="@+id/mcPickture">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPicture">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcAutoBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/BluetoothSearchButton"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/deviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관경 측경(auto)"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAutoDiscripion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="연속 측정을 시도합니다."
                    android:textSize="20sp"
                    android:textColor="#7265E3"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@+id/deviceName"
                    app:layout_constraintTop_toBottomOf="@+id/deviceName">
                </com.google.android.material.textview.MaterialTextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcManual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/BluetoothSearchButton"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toEndOf="@+id/mcAutoBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mcAutoBtn">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="30dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관경 측경(manual)"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvManualDiscripion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수동 측정을 시도합니다."
                    android:textSize="20sp"
                    android:textColor="#7265E3"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@+id/tvManual"
                    app:layout_constraintTop_toBottomOf="@+id/tvManual">
                </com.google.android.material.textview.MaterialTextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>